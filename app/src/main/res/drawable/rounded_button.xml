<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/bg_button_click" />
            <stroke android:width="2dp" android:color="@color/str_button_click" />
            <corners android:radius="8dp" />
            <padding android:left="10dp" android:top="5dp" android:right="10dp" android:bottom="5dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/bg_button_default" />
            <stroke android:width="2dp" android:color="@color/str_button_default" />
            <corners android:radius="8dp" />
            <padding android:left="10dp" android:top="5dp" android:right="10dp" android:bottom="5dp" />
        </shape>
    </item>
</selector>