<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  text style  -->
    <style name="medium">
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="large">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="normal">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="normal_bold">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="small_bold">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="small">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="desc">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/text_des</item>
    </style>

    <style name="time">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_des</item>
    </style>

    <!--  Button  -->
    <style name="CustomButton">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>